<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <package name="actions" extends="struts-default">      
        
        <action name="Login" class="actions.UsuarioAction">
            <result name="Estudiante">estudiante/indexEstudiante.jsp</result>
            <result name="admin">administracion/GestionarCatalogos.jsp</result>
            <result name="Coordinador">coordinador/indexCoordinador.jsp</result>
            <result name="input">/index.jsp</result>
        </action>
       
       
        <action name="verificarSol" class="actions.SolicitudAction" method="crearSolicitud"> 
            <result name="success">estudiante/solicitudes/SolicitudResult.jsp</result>
            <result name="input">estudiante/solicitudes/SolicitarCambio.jsp</result>
        </action>
        
        <action name="verificarReq" class="actions.SolicitudAction" method="solicitarCambio">
            <result>estudiante/solicitudes/SolicitarCambio.jsp</result>
        </action>
        
        <action name="ListarSol" class="actions.SolicitudAction" method="listarSolicitudes"> 
            <result name="success">estudiante/solicitudes/ListaSolicitudes.jsp</result> 
        </action>
        
        <action name="ModificarCup" class="actions.ModificarCupos" method="actualizarCupos"> 
            <result name="success">cupos/CupoModificado.jsp</result> 
            <result name="no success">cupos/cambiarCupos.jsp</result> 
            <result name="input">cupos/cambiarCupos.jsp</result> 
        </action> 
        
        <action name="solicitudCupos" class="actions.ModificarCupos" method="solicitarCupos"> 
            <result name="success">cupos/mostrarCupo.jsp</result>
            <result name="Coordinador">cupos/mostrarCupoC.jsp</result>
            <result name="input">cupos/modificarCupos.jsp</result> 
            <result name="no success">cupos/errorCupo.jsp</result> 
        </action> 
        
        <action name="SolPen" class="actions.VisualizarSol" method="verPendientes"> 
            <result name="success">coordinador/verSolicitudesPend.jsp</result>
            <result name="no success">cupos/errorCupo.jsp</result>
        </action> 
        
        <action name="Aprobar" class="CRUD.usuarios.UpdateSolicitud" method="Aceptar"> 
            <result name="success">cupos/errorCupo.jsp</result>
            <result name="no success">cupos/errorCupo.jsp</result>
        </action> 
        
        <action name="Denegar" class="CRUD.usuarios.UpdateSolicitud" method="Negar"> 
            <result name="success">cupos/errorCupo.jsp</result>
            <result name="no success">cupos/errorCupo.jsp</result>
        </action> 
        
        <action name="SolApRep" class="actions.VisualizarSol" method="verYaGestionados"> 
            <result name="success">coordinador/verSolicitudesAproRepro.jsp</result>
            <result name="no success">cupos/errorCupo.jsp</result>
        </action> 
        
        <action name="updateSol" class="CRUD.usuarios.UpdateSolicitud">
            <result name="success">coordinador/mostrarDatos.jsp</result>
        </action>
        
        
    </package>
</struts>