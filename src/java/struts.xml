<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <!-- Configuration for the default package. -->
    <include file="actions.xml"></include>
    <constant name="struts.enable.DynamicMethodInvocation" value="false" />
    <constant name="struts.devMode" value="false" />
    <package name="default" extends="struts-default">
        
        <!-- JAVA4S -->
        <action name="view" class="java4s.Display">
            <result name="success">retrive.jsp</result>
            <result name="error">/error.jsp</result>      
        </action>
        
        <action name="insert" class="java4s.Save">
            <result name="success">ssuccess.jsp</result>
            <result name="error">/error.jsp</result>      
        </action>
        
        <action name="del" class="java4s.Delete">
            <result name="success">dsuccess.jsp</result>
            <result name="error">/error.jsp</result>      
        </action>
        
        <action name="update" class="java4s.Update">
            <result name="success">edit.jsp</result>
            <result name="error">/error.jsp</result>      
        </action>
        
        <action name="updates" class="java4s.Updates">
            <result name="success">usuccess.jsp</result>
            <result name="error">/error.jsp</result>      
        </action>
        
        <action name="*Link" class="java4s.Links" method="{1}">
            <result name="save">insertr.jsp</result>
            <result name="display">retrive.jsp</result>           
        </action>
             <!--FIN JAVA4S --> 
             <!-- JAVA4S.carrera -->
        <action name="view.carrera" class="java4s.carrera.Display">
            <result name="success">retrive.jsp</result>
            <result name="error">error.jsp</result>      
        </action>
        
        <action name="insert.carrera" class="java4s.carrera.Save">
            <result name="success">ssuccess.jsp</result>
            <result name="error">error.jsp</result>      
        </action>
        
        <action name="del.carrera" class="java4s.carrera.Delete">
            <result name="success">dsuccess.jsp</result>
            <result name="error">error.jsp</result>      
        </action>
        
        <action name="update.carrera" class="java4s.carrera.Update">
            <result name="success">edit.jsp</result>
            <result name="error">error.jsp</result>      
        </action>
        
        <action name="updates.carrera" class="java4s.carrera.Updates">
            <result name="success">usuccess.jsp</result>
            <result name="error">error.jsp</result>      
        </action>
        
        <action name="*Link.carrera" class="java4s.carrera.Links" method="{1}">
            <result name="save">insertr.jsp</result>
            <result name="display">retrive.jsp</result>           
        </action>
             <!--FIN JAVA4S.carrera --> 
        
    </package>
    
</struts>
