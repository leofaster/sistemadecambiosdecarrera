<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <package name="Sistema_de_Cambios_de_Carrera" extends="struts-default">      
        
        <action name="buscarEst" class="actions.EstudianteAction" method="buscarEstudiante"> 
            <result name="success">estudiante/Form2.jsp</result>
            <result name="admin">administracion/GestionarCatalogos.jsp</result>
            <result name="coordinador">cupos/solicitudYModifCupos.jsp</result>
            <result name="input">/index.jsp</result>
        </action>
        
        <action name="Login" class="actions.UsuarioAction">
            <result name="Estudiante">estudiante/Form2.jsp</result>
            <result name="admin">administracion/GestionarCatalogos.jsp</result>
            <result name="Coordinador">cupos/solicitudYModifCupos.jsp</result>
            <result name="input">/index.jsp</result>
        </action>
       
       
        <action name="verificarSol" class="actions.SolicitudAction" method="mostrarSolicitud"> 
            <result name="success">estudiante/solicitudes/AgregadaSol.jsp</result> 
            <result name="no success">estudiante/solicitudes/MalaSol.jsp</result> 
        </action> 
        
        <action name="ModificarCup" class="actions.ModificarCupos" method="actualizarCupos"> 
            <result name="success">CupoModificado.jsp</result> 
            <result name="no success">CupoNoModificado.jsp</result> 
        </action> 
        
        <action name="solicitudCupos" class="actions.ModificarCupos" method="solicitarCupos"> 
            <result name="success">mostrarCupo.jsp</result> 
            <result name="no success">errorCupo.jsp</result> 
        </action> 
        
    </package>
</struts>